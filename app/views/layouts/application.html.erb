<!DOCTYPE html>
<html>
  <head>
    <title>Campist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header'%>
    <main>
      <% if notice.present? %>
      <div id="notice-box" class="position-fixed w-100 text-center">
        <div id="notice" class="d-inline-block"><%= notice %></div>
      </div>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
