<!DOCTYPE html>
<html>
  <head>
    <title>Campist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header'%>
    <main>
      <% if notice.present? %>
      <div id="notice-box" class="position-fixed w-100 text-center">
        <div id="notice" class="d-inline-block"><%= notice %></div>
      </div>
      <% end %>
      <%= yield %>
      <span id="back">
        <a href="#">
          <i class="fas fa-angle-up fa-3x"></i>
        </a>
      </span>
    </main>
    <footer class="footer w-100">
        <div class="container">
          <p class="text-muted">Place sticky footer content here.</p>
        </div>
    </footer>
  </body>
</html>
