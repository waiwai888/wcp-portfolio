<!DOCTYPE html>
<html>
  <head>
    <title>Campist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header'%>
      <main>
        <% if user_signed_in? %>
          <%= render 'layouts/search' %>
        <% end %>
        <p id="notice"><%= notice %></p>
      </main>
    <%= yield %>
  </body>
</html>
