<div class="container">
  <h4 class="page-heading mr-2">New CampSite</h4>
  <div class="ml-2 mr-2">
    <%= form_with model: @camp_site, local:true do |f| %>
    <div class="field row col-sm-12 col-md-6 d-block">
      <%= f.label :site_name, "サイト名", class: "mt-3" %>
      <%= f.text_field :site_name, class: "form-control" %>
    </div>
    <div class="field row col-sm-12 col-md-6 d-block">
      <%= f.submit '投稿', class: 'btn btn-success mt-3' %>
    </div>
    <% end %>
  </div>