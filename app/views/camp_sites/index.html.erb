<div class="container">
  <table class="table">
    <thead>
      <th>サイト名</th>
    </thead>
    <tbody>
      <% @camp_sites.each do |camp_site| %>
        <tr>
          <td>
            <%= link_to camp_site_path(camp_site) do %>
              <%= camp_site.site_name %>
            <% end %>
          </td>
          <td>
            <div id="star-score"></div> (<%= camp_site.reviews.average(:score) %>点)
          </td>
          
           <!--星評価-->
            <script>
            $('#star-score').raty({
              size: 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              half: true,
              readOnly: true,
            });
          </script>  
          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>