<div class="container">
  <div class="posts_search">
    <% if @posts.empty? %>
      <h3 class="page-heading">"<%= @content %>"　に関する投稿はありません</h3>
    <% else %>
      <h3 class="page-heading">"<%= @content %>" に関する投稿<span>（全 <%= @post_count %> 件)</span></h3>
      <div class="row">
        <%= render 'posts/feeds', posts: @posts %>
      </div>
    <% end %>
  </div>
</div>