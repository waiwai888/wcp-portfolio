<div class="container">
  <h1 class="title">Feeds</h1>
  <div class="row">
    <% @posts.each do |post| %>
    <div class="col3">
      <%= link_to post_path(post) do %>
        <%= attachment_image_tag(post, :image, :fill, 300, 300, fallback: "no_image.png") %>
      <% end %> 
      <!--アイコン表示-->
      <%= link_to user_path(post.user) do %>
        <%= post.user.nickname %>
      <% end %>
      <%= post.body %>
    </div>
    <% end %>
  </div>
</div>