
<% posts.each do |post| %>
  <div class="col-12 col-md-6 col-lg-4 post_1 mt-3">
    <div class="bg-white">
    <div class="image_container">
      <!--投稿画像-->
      <%= link_to post_path(post) do %>
        <%= attachment_image_tag(post, :image, fallback: "no_image.png", class: "img d-block mx-auto", style: "background-image: none;") %>
      <% end %>
    </div>

    <div class="row mt-3">
        <!--アイコン-->
        <div class="sub col-md-3">
          <%= link_to user_path(post.user) do %>
            <%= attachment_image_tag post.user, :profile_image, :fill,100,100, format: "jpeg", fallback: "no_image.png", size: "50x50", class: "rounded-circle d-block mx-auto" %>
          <% end %>
        </div>
        <!--ニックネーム・アカウント名-->
        <div class="name text-center col-md-4">
          <p><strong><%= link_to post.user.nickname, user_path(post.user), class: "link" %></strong></p>
          <p><%= link_to post.user.account_name, user_path(post.user), class: "link" %></p>
        </div>
        <!--いいねボタン設置-->
        <div class="favorite col-md-2">
          <%= render 'layouts/favorite', post: post %>
        </div>
        <!--フォローボタン設置-->
        <div class="btn-block col-md-3">
          <%= render 'layouts/follow', user: post.user %>
        </div>
    </div>
    </div>
  </div>
<% end %>

