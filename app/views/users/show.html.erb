<div class="container">
  <!--current_user情報-->
  <div class="row">
    <div class=" text-center">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.png"%>
      <%= current_user.nickname %>
      @<%= current_user.account_name %>
      <!--follower|followed表示-->
      <%= current_user.introduction %>
      <!--follow/unfollowボタン表示-->
    </div>
  </div>
  <!--current_userの全投稿-->
  <div class="row">
    <%= render 'posts/feeds', posts: @posts %>
  </div>
</div>