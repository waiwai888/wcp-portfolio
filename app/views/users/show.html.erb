<div class="container">  
  <div class="user_header clearfix">
    <!--current_user情報-->
    <div class="user_sub">
      <p class="userImg img_expand">
        <%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, size: "100x100", format: "jpeg", fallback: "no_image.png", size: "100x100", class: "rounded-circle" %>
        <% end %>
      </p>
      <!--follower|followed表示-->
      <div class="relationship_count">
        <p>followings <strong><%= link_to user_followings_path(@user.id) do %><%= @user.followings.count %><% end %></strong> | followers <strong><%= link_to user_followers_path(@user.id) do %><%= @user.followers.count %><% end %></strong></p>
      </div>
      <div class="btn_follow">
        <!--フォローボタン設置-->
        <%= render 'layouts/follow', user: @user %>
      </div>
    </div>
    <div class="user_main">
      <h2 class="nickname">
        <%= @user.nickname %>
      </h2>
      <div class="account_name">
        @<%= @user.account_name %>
      </div>
      <div class="introduction">
         <%= @user.introduction %>
      </div>
      <!--DMボタン設置-->
      <div class="dm_btn">
      <% if current_user != @user && current_user.following?(@user) && @user.following?(current_user) %>
        <%= link_to 'chat', chat_path(@user.id), class: "ml-3" %>
      <% end %>
      </div>
    </div>
  </div>
  <!--current_userの全投稿-->
  <div class="row">
    <%= render 'posts/feeds', posts: @posts %>
  </div>
  <div class="page mt-4 mb-5">
    <%= paginate @posts %>
  </div>
</div>