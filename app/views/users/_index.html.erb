<div class="users-index">
  <div class="row col-md-6">
    <% users.each do |user| %>
      <div class="col-4 col-md-3 mb-2">
        <%= link_to user_path(user) do %>
          <%= attachment_image_tag user, :profile_image, size: "60x60", format: "jpeg", fallback: "no_image.png", size: "60x60", class: "rounded-circle", style: "object-fit: cover;" %>
        <% end %>
      </div>
      <div class="col-4 col-md-4 mb-2 pt-3">
        <%= link_to user_path(user) do %>
          <%= user.account_name %>
        <% end %>
      </div>
      <div class="col-4 col-md-5 mb-2 pt-2">
        <% if current_user != user %>
          <% if current_user.following?(user) %>
            <%= link_to "unfollow", user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
          <% else %>
            <%= link_to "follow", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>