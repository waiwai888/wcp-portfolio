<div class="container">
  <h2>プロフィール編集</h2>
    <%= form_with model: @user, local:true do |f| %>
      <%= f.label :profile_image, "プロフィール画像", class: "d-block" %>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.png", class: "rounded-circle d-insline-block", style: "object-fit: cover;"%>
      <%= f.attachment_field :profile_image %>
      <%= f.label :nickname, "ニックネーム", class: "d-block mt-3"  %>
      <%= f.text_field :nickname %>
      <%= f.label :account_name, "アカウント名", class: "d-block mt-3" %>
      <%= f.text_field :account_name %>
      <%= f.label :introduction, "自己紹介文", class: "d-block mt-3" %>
      <%= f.text_field :introduction %>
      <%= f.submit "Update", class: "btn btn-success d-block mt-3" %>
    <% end %>
</div>